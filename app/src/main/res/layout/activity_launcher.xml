<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/tl100tr100bffffff75"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LauncherActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:textColor="#000000"
                android:textSize="32sp"
                android:layout_height="wrap_content"
                android:layout_width="282dp"
                android:gravity="center"
                android:text="Discover"
                />

            <TextView
                android:textColor="#D5C023"
                android:textSize="40sp"
                android:layout_height="wrap_content"
                android:layout_width="282dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Allergen Free"
                android:fontFamily="@font/handwrite"
                android:background="#CCFFFFFF"
                android:padding="5dp" />

            <TextView
                android:textColor="#000000"
                android:textSize="32sp"
                android:layout_height="wrap_content"
                android:layout_width="282dp"
                android:gravity="center"
                android:text="Food that Suit Your Needs"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="360dp"
                android:id="@+id/SignInRedirect"
                android:layout_height="60dp"
                android:text="Sign In"
                android:textColor="#FFFFFF"
                android:textSize="32sp"
                android:textStyle="bold"
                android:background="@drawable/gradient_button"
                android:layout_margin="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SignUpRedirect"
                android:text="Dont have an account? Sign Up"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:textSize="18sp"/>

        </LinearLayout>
    </FrameLayout>
    
</LinearLayout>