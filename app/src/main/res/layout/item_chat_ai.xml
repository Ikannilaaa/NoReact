<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingStart="16dp"
    android:paddingEnd="64dp"
    android:gravity="start">

    <!-- AI Avatar -->
    <ImageView
        android:id="@+id/img_ai_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:layout_gravity="top"
        android:background="@drawable/ai_avatar_background"
        android:src="@drawable/ic_ai_avatar"
        android:padding="6dp"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:maxWidth="280dp">

        <!-- Message Bubble -->
        <TextView
            android:id="@+id/text_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_ai_background"
            android:padding="16dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:lineSpacingExtra="2dp"
            android:elevation="2dp" />

        <!-- Loading Animation Container -->
        <LinearLayout
            android:id="@+id/layout_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/message_ai_background"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/progress_typing"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:indeterminateTint="#888888" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI sedang mengetik..."
                android:textColor="#888888"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/text_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:textColor="#888888"
            android:textSize="12sp"
            android:text="17:49"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>